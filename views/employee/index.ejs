<div class="container">
  <div ng-controller="angEmpController">
    
    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" ng-click="addItem()">Add</button>
    <div class="page-header">
      <ul><ol><input ng-model="searchText"></ol></ul>
      <ul class="nav nav-tabs">
        <li ng-class="{true:'active', false:'inactive'}[selectedType=='01']"><a href="" ng-click="selectedType='01'">外包</a></li>
        <li ng-class="{true:'active', false:'inactive'}[selectedType=='02']"><a href="" ng-click="selectedType='02'">自有项目</a></li>
        <li ng-class="{true:'active', false:'inactive'}[selectedType=='03']"><a href="" ng-click="selectedType='03'">互联网</a></li>
        <li ng-class="{true:'active', false:'inactive'}[selectedType=='']"><a href="" ng-click="selectedType=''">其他</a></li>
      </ul>
    </div>
    <div class="row">
      <div ng-repeat="item in items | filter:validate | filter:searchText">
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <div class="caption">
              <h3 ng-bind="item.title"></h3>
              <p ng-bind="item.company"></p>
              <p style="white-space: pre-wrap;" ng-bind="item.jobDesc"></p>
              <p>
                <button class="btn btn-primary" data-toggle="modal" data-target="#myModal" ng-click="editItem(item)">Edit</button>
                <button class="btn" ng-click="removeItem(item)">Remove</button>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" ng-show="displayForm">
      <div class="modal-dialog">
        <div class="modal-content">
          <form class="modal-body" name="myForm" novalidate>
            
            <div class="form-group">
              <input type="text" name="title" ng-model="employee.title"  class="form-control" placeholder="职位"/>
            </div>
            <div class="form-group">
              <input type="text" name="company" ng-model="employee.company"  class="form-control" placeholder="公司"/>
            </div>
            <div class="form-group">
              <textarea name="jobDesc" ng-model="employee.jobDesc"  class="form-control" placeholder="职位要求" rows="10" cols="30" required>
              </textarea>
              <div class="alert alert-danger" role="alert" ng-show="myForm.jobDesc.$invalid && myForm.jobDesc.$error.required">职位要求必须输入！</div>
            </div>
            <div class="form-group">
              <select name="type" class="form-control" ng-model="employee.type">
                <option value="">请输入职位类型</option>
                <option value="01">外包</option>
                <option value="02">自有项目</option>
                <option value="03">互联网</option>
              </select>
            </div>
            <div class="modal-footer">
              <button class="btn btn-primary" ng-disabled="myForm.jobDesc.$invalid" ng-click="saveItem()">Save</button>
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>